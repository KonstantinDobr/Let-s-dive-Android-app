    <!-- Base application theme. -->
    <style name="Base.Theme.LetsDive" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LetsDive" parent="Base.Theme.LetsDive" />

    <style name="DateDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/background_color</item>
        <item name="android:background">@color/button</item>
        <item name="dialogCornerRadius">20dp</item>
    </style>







    <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/button</item>
        <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">

        <item name="colorAccent">@color/background_color</item>

        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/button</item>
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item>
        <item name="titleTextColor">@color/button</item>
        <item name="android:numbersTextColor">#ff000000</item>
        <item name="android:numbersSelectorColor">@color/background_color</item>
        <item name="android:numbersBackgroundColor">@color/button</item>

    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">

        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/background_color</item>

    </style>

